<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.VerifyActivity">
    <TextView
        android:layout_width="match_parent"
        android:text="Verification"
        android:gravity="center"
        android:layout_marginTop="130dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:text="Please enter the 4 digits Verification Code sent on your Mobile number and Email address"
        android:layout_height="wrap_content"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:layout_margin="5dp"

        android:layout_height="wrap_content">

        <!--        <in.aabhasjindal.otptextview.OtpTextView-->
        <!--            android:id="@+id/otp_view"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:textColor="@color/black"-->
        <!--            app:bar_enabled="true"-->

        <!--            app:bar_height="2dp"-->
        <!--            app:height="60dp"-->
        <!--            app:bar_margin_left="10dp"-->
        <!--            app:bar_margin_right="10dp"-->
        <!--            app:bar_margin_bottom="5dp"-->
        <!--            app:bar_inactive_color="@color/white"-->
        <!--            app:otp_text_size="24dp"-->
        <!--            app:otp_box_background_active="@drawable/rectangle_white_grey_border"-->
        <!--            app:otp_box_background_inactive="@drawable/rounded_rectangle_light_purple"-->
        <!--            app:width="60dp" />-->
        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bar_enabled="true"
            app:bar_height="2dp"
            app:height="40dp"
            app:length="4"
            app:otp_text_size="24dp"

            app:width="40dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="00:59"
            android:textColor="@color/black"
            android:id="@+id/timerTxt"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:text="resend"
            android:id="@+id/resendTxt"
            android:textColor="@color/greyDark"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="150dp"
            android:text="Edit Mobile"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:id="@+id/editmobileTxt"
            android:gravity="center"
            android:background="@drawable/rectangle_white_grey_border"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="150dp"
            android:text="Verify"
            android:textColor="@color/white"
            android:background="@drawable/black_button"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/verifyTxt"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
</LinearLayout>