<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:background="@color/colorAppBG">

    <LinearLayout
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            android:elevation="4dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Refine"
                    android:textSize="17dp"
                    android:textColor="@color/white">

                </TextView>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Rating"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@drawable/ic_empty_start"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="1"
                        android:textSize="18dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"

                        android:drawableRight="@drawable/ic_empty_start"
                        android:drawablePadding="5dp"

                        android:gravity="center_vertical"
                        android:text="2"
                        android:textSize="18dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"

                        android:drawableRight="@drawable/ic_empty_start"
                        android:drawablePadding="5dp"

                        android:gravity="center_vertical"
                        android:text="3"
                        android:textSize="18dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@drawable/ic_empty_start"
                        android:drawablePadding="5dp"

                        android:gravity="center_vertical"
                        android:text="4"
                        android:textSize="18dp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@drawable/ic_filled_star"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="5"
                        android:textSize="18dp"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Sort by"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/rectangle_white_grey_dark_border"
                        android:drawableRight="@drawable/ic_arrow_down"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size_normal"
                        android:text="Popularity"></EditText>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Discount"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <com.suke.widget.SwitchButton
                        android:id="@+id/switch_button"
                        android:layout_width="50dp"
                        app:sb_show_indicator="false"
                        android:layout_marginRight="10dp"
                        app:sb_checked_color="@color/black"
                        android:layout_height="30dp"/>

<!--
   <Switch-->
<!--                        android:id="@+id/switch1"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginLeft="100dp"-->
<!--                        android:checked="true"-->


<!--                        android:switchMinWidth="56dp"-->
<!--                        android:textOff="OFF"-->
<!--                        android:textOn="ON" />-->
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Availability"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

<!--                    <Switch-->
<!--                        android:id="@+id/switch2"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginLeft="100dp"-->
<!--                        android:checked="true"-->


<!--                        android:switchMinWidth="56dp"-->
<!--                        android:textOff="OFF"-->
<!--                        android:textOn="ON" />-->
                    <com.suke.widget.SwitchButton
                        android:id="@+id/switch_button_one"
                        android:layout_width="50dp"
                        app:sb_show_indicator="false"
                        android:layout_marginRight="10dp"
                        app:sb_checked_color="@color/black"
                        android:layout_height="30dp"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Price Range (KD)"></TextView>


                    <EditText
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/rectangle_white_grey_dark_border"
                        android:drawableRight="@drawable/ic_arrow_down"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size_normal"
                        android:text="100"></EditText>

                    <EditText
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/rectangle_white_grey_dark_border"
                        android:gravity="center"
                        android:drawableRight="@drawable/ic_arrow_down"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size_normal"
                        android:text="500"></EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/filterTxt"

                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/black_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Filter"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/resetTxt"

                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle_white_grey_dark_border"
                    android:gravity="center"

                    android:padding="10dp"
                    android:text="Reset"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_error" />
</RelativeLayout>